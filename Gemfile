source :rubygems

gem 'twiliolib', :git => 'git://github.com/bjeanes/twilio-ruby.git'
gem 'sinatra'
gem 'sinatra-twilio', :require => 'sinatra/twilio'
gem 'sinatra-redis', :require => 'sinatra/redis'

group :development do
  gem 'shotgun'
  gem 'showoff-io'
  gem 'heroku'
end

group :development, :test do
  gem 'rack-test'
  gem 'rspec'
end
